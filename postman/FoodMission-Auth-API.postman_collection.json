{
	"info": {
		"_postman_id": "auth-api-collection",
		"name": "FoodMission Auth API",
		"description": "Collection for FoodMission Authentication API endpoints. Use this to get JWT tokens from Keycloak and test authenticated endpoints.\n\n**IMPORTANT:** Make sure the `base_url` variable is set to `http://localhost:3000` (or your backend server URL) in your Postman environment. Do NOT use a frontend URL (like localhost:5173 or localhost:4200).\n\nThe API uses the global prefix `/api/v1`, so all endpoints are under `/api/v1/...`",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"item": [
		{
			"name": "Public Endpoints",
			"item": [
				{
					"name": "Get Auth Info",
					"request": {
						"method": "GET",
						"header": [],
					"url": {
						"raw": "{{base_url}}/api/v1/auth/info",
						"host": [
							"localhost"
						],
						"port": "3000",
						"path": [
							"api",
							"v1",
							"auth",
							"info"
						],
						"protocol": "http"
					},
						"description": "Get Keycloak authentication configuration. Use this to get the Keycloak server URL, realm, and client ID needed for token requests."
					},
					"response": [],
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"if (pm.response.code === 200) {",
									"    const jsonData = pm.response.json();",
									"    pm.environment.set('keycloak_url', jsonData.authServerUrl);",
									"    pm.environment.set('keycloak_realm', jsonData.realm);",
									"}"
								],
								"type": "text/javascript"
							}
						}
					]
				},
				{
					"name": "Health Check",
					"request": {
						"method": "GET",
						"header": [],
					"url": {
						"raw": "{{base_url}}/api/v1/auth/health",
						"host": [
							"localhost"
						],
						"port": "3000",
						"path": [
							"api",
							"v1",
							"auth",
							"health"
						],
						"protocol": "http"
					},
						"description": "Check if the authentication service is healthy"
					},
					"response": []
				}
			],
			"description": "Public endpoints that don't require authentication"
		},
		{
			"name": "Keycloak Token",
			"item": [
				{
					"name": "Get Token (Password Grant)",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/x-www-form-urlencoded"
							}
						],
						"body": {
							"mode": "urlencoded",
							"urlencoded": [
								{
									"key": "grant_type",
									"value": "password",
									"type": "text"
								},
								{
									"key": "client_id",
									"value": "{{keycloak_client_id}}",
									"type": "text"
								},
								{
									"key": "client_secret",
									"value": "{{keycloak_client_secret}}",
									"type": "text"
								},
								{
									"key": "username",
									"value": "{{keycloak_username}}",
									"type": "text"
								},
								{
									"key": "password",
									"value": "{{keycloak_password}}",
									"type": "text"
								}
							]
						},
						"url": {
							"raw": "{{keycloak_url}}/realms/{{keycloak_realm}}/protocol/openid-connect/token",
							"host": [
								"{{keycloak_url}}"
							],
							"path": [
								"realms",
								"{{keycloak_realm}}",
								"protocol",
								"openid-connect",
								"token"
							]
						},
						"description": "Get JWT access token from Keycloak using password grant. This is for testing purposes. In production, use authorization code flow."
					},
					"response": [],
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"if (pm.response.code === 200) {",
									"    const jsonData = pm.response.json();",
									"    pm.environment.set('jwt_token', jsonData.access_token);",
									"    pm.environment.set('refresh_token', jsonData.refresh_token);",
									"    console.log('Token saved to environment variable: jwt_token');",
									"}"
								],
								"type": "text/javascript"
							}
						}
					]
				},
				{
					"name": "Refresh Token",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/x-www-form-urlencoded"
							}
						],
						"body": {
							"mode": "urlencoded",
							"urlencoded": [
								{
									"key": "grant_type",
									"value": "refresh_token",
									"type": "text"
								},
								{
									"key": "client_id",
									"value": "{{keycloak_client_id}}",
									"type": "text"
								},
								{
									"key": "client_secret",
									"value": "{{keycloak_client_secret}}",
									"type": "text"
								},
								{
									"key": "refresh_token",
									"value": "{{refresh_token}}",
									"type": "text"
								}
							]
						},
						"url": {
							"raw": "{{keycloak_url}}/realms/{{keycloak_realm}}/protocol/openid-connect/token",
							"host": [
								"{{keycloak_url}}"
							],
							"path": [
								"realms",
								"{{keycloak_realm}}",
								"protocol",
								"openid-connect",
								"token"
							]
						},
						"description": "Refresh the access token using a refresh token"
					},
					"response": [],
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"if (pm.response.code === 200) {",
									"    const jsonData = pm.response.json();",
									"    pm.environment.set('jwt_token', jsonData.access_token);",
									"    pm.environment.set('refresh_token', jsonData.refresh_token);",
									"}"
								],
								"type": "text/javascript"
							}
						}
					]
				}
			],
			"description": "Keycloak token endpoints for getting JWT tokens"
		},
		{
			"name": "Protected Endpoints",
			"item": [
				{
					"name": "Get User Profile",
					"request": {
						"method": "GET",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{jwt_token}}",
								"type": "text"
							}
						],
						"url": {
							"raw": "{{base_url}}/api/v1/auth/profile",
							"host": [
								"localhost"
							],
							"port": "3000",
							"path": [
								"api",
								"v1",
								"auth",
								"profile"
							],
							"protocol": "http"
						},
						"description": "Get authenticated user profile. Automatically creates user record if not exists. Requires valid JWT token."
					},
					"response": [],
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"if (pm.response.code === 200) {",
									"    const jsonData = pm.response.json();",
									"    pm.environment.set('user_id', jsonData.id);",
									"    console.log('User ID saved:', jsonData.id);",
									"}"
								],
								"type": "text/javascript"
							}
						}
					]
				},
				{
					"name": "Get Token Info",
					"request": {
						"method": "GET",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{jwt_token}}",
								"type": "text"
							}
						],
						"url": {
							"raw": "{{base_url}}/api/v1/auth/token-info",
							"host": [
								"localhost"
							],
							"port": "3000",
							"path": [
								"api",
								"v1",
								"auth",
								"token-info"
							],
							"protocol": "http"
						},
						"description": "Get detailed information about the current JWT token. Requires valid JWT token."
					},
					"response": []
				},
				{
					"name": "Update User Preferences",
					"request": {
						"method": "PUT",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							},
							{
								"key": "Authorization",
								"value": "Bearer {{jwt_token}}",
								"type": "text"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"dietaryRestrictions\": [\"vegetarian\"],\n  \"allergies\": [\"nuts\"],\n  \"preferredCategories\": [\"fruits\", \"vegetables\"]\n}",
							"options": {
								"raw": {
									"language": "json"
								}
							}
						},
						"url": {
							"raw": "{{base_url}}/api/v1/auth/profile/preferences",
							"host": [
								"localhost"
							],
							"port": "3000",
							"path": [
								"api",
								"v1",
								"auth",
								"profile",
								"preferences"
							],
							"protocol": "http"
						},
						"description": "Update app-specific user preferences. Requires valid JWT token."
					},
					"response": []
				},
				{
					"name": "Update User Settings",
					"request": {
						"method": "PUT",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							},
							{
								"key": "Authorization",
								"value": "Bearer {{jwt_token}}",
								"type": "text"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"theme\": \"dark\",\n  \"language\": \"en\",\n  \"notifications\": true\n}",
							"options": {
								"raw": {
									"language": "json"
								}
							}
						},
						"url": {
							"raw": "{{base_url}}/api/v1/auth/profile/settings",
							"host": [
								"localhost"
							],
							"port": "3000",
							"path": [
								"api",
								"v1",
								"auth",
								"profile",
								"settings"
							],
							"protocol": "http"
						},
						"description": "Update app-specific user settings. Requires valid JWT token."
					},
					"response": []
				},
				{
					"name": "Admin Only Endpoint",
					"request": {
						"method": "GET",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{jwt_token}}",
								"type": "text"
							}
						],
						"url": {
							"raw": "{{base_url}}/api/v1/auth/admin-only",
							"host": [
								"localhost"
							],
							"port": "3000",
							"path": [
								"api",
								"v1",
								"auth",
								"admin-only"
							],
							"protocol": "http"
						},
						"description": "Test endpoint that requires admin role. Used for testing role-based access control."
					},
					"response": []
				}
			],
			"description": "Protected endpoints that require JWT authentication"
		}
	],
